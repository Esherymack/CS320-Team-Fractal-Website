<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>LandingPageServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CS320_Team_Fractal_Website.servlet.LandingPageServlet</servlet-class>
  </servlet>
  
  <servlet>
 	 <servlet-name>MainPageServlet</servlet-name>
 	 <servlet-class>edu.ycp.cs320.CS320_Team_Fractal_Website.servlet.MainPageServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>LogInServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CS320_Team_Fractal_Website.servlet.LogInServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>logoutServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.CS320_Team_Fractal_Website.servlet.logoutServlet</servlet-class>
  </servlet>
  
   <servlet>
    <servlet-name>CreateAccountServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CS320_Team_Fractal_Website.servlet.CreateAccountServlet</servlet-class>
  </servlet>
  
   <servlet>
    <servlet-name>ViewAccountServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CS320_Team_Fractal_Website.servlet.ViewAccountServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CS320_Team_Fractal_Website.servlet.IndexServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>GuessingGameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CS320_Team_Fractal_Website.servlet.temp.GuessingGameServlet</servlet-class>
  </servlet>

  <!-- AJAX servlets. -->
  <servlet>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CS320_Team_Fractal_Website.servlet.ajax.NextGuessAjaxServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>LandingPageServlet</servlet-name>
    <url-pattern>/landingPage</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>MainPageServlet</servlet-name>
    <url-pattern>/mainPage</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>LogInServlet</servlet-name>
    <url-pattern>/logIn</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>logoutServlet</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>CreateAccountServlet</servlet-name>
    <url-pattern>/createAccount</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ViewAccountServlet</servlet-name>
    <url-pattern>/viewAccount</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>GuessingGameServlet</servlet-name>
    <url-pattern>/guessingGame</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>IndexServlet</servlet-name>
  	<url-pattern>/index</url-pattern>
  </servlet-mapping>
  
  <!--  AJAX servlet mappings. -->
  <servlet-mapping>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <url-pattern>/ajax/nextGuess</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>landingPage</welcome-file>
  </welcome-file-list>
</web-app>
